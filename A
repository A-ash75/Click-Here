    <button id="stopBtn" class="cta hidden" aria-label="Stop">‚èπ Stop</button>
  </div>

  <div class="hud">‡∏Ñ‡∏•‡∏¥‡∏Å‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏° ‚Äú‡∏ä‡∏¥‡∏ô‡πÅ‡∏à‡πã‡∏ß‚Äù ‡∏ß‡∏¥‡πà‡∏á‡πÄ‡∏ï‡πá‡∏°‡∏à‡∏≠</div>

  <script>
    const btn = document.getElementById('startBtn');
    const stopBtn = document.getElementById('stopBtn');
    let timer = null;

    function rand(min, max) { return Math.random() * (max - min) + min; }

    function spawnWord() {
      const el = document.createElement('div');
      el.className = 'word';
      el.textContent = '‡∏ä‡∏¥‡∏ô‡πÅ‡∏à‡πã‡∏ß';

      const vw = window.innerWidth;
      const vh = window.innerHeight;

      const x = rand(0.1 * vw, 0.9 * vw);
      const y = rand(0.1 * vh, 0.9 * vh);
      const dx = rand(-40, 40);
      const dy = rand(-60, 60);
      const rot = rand(-20, 20) + 'deg';

      const size = Math.round(rand(18, Math.min(90, vw * 0.06)));
      el.style.fontSize = size + 'px';

      el.style.setProperty('--x', (x - 0) + 'px');
      el.style.setProperty('--y', (y - 0) + 'px');
      el.style.setProperty('--dx', dx + 'px');
      el.style.setProperty('--dy', dy + 'px');
      el.style.setProperty('--rot', rot);

      document.body.appendChild(el);
      el.addEventListener('animationend', () => el.remove());
    }

    function startShow() {
      if (timer) return;
      btn.classList.add('hidden');
      stopBtn.classList.remove('hidden');
      document.querySelector('.hud')?.classList.add('hidden');

      for (let i = 0; i < 100; i++) spawnWord();

      timer = setInterval(() => {
        const burst = Math.floor(rand(10, 20));
        for (let i = 0; i < burst; i++) spawnWord();
      }, 100);
    }

    function stopShow() {
      if (timer) {
        clearInterval(timer);
        timer = null;
      }
      stopBtn.classList.add('hidden');
      btn.classList.remove('hidden');
    }

    btn.addEventListener('click', startShow);
    stopBtn.addEventListener('click', stopShow);
  </script>
</body>
